{
  "name": "CES Portfolio Management System",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "ms-azuretools.vscode-docker",
        "anthropic.claude-code"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  },
  "forwardPorts": [
    // 3000,
    // 5173,
    // 5432,
    // 54321,
    // 54323
  ],
  "portsAttributes": {
    // "3000": {
    //   "label": "API",
    //   "onAutoForward": "notify"
    // },
    // "5173": {
    //   "label": "Vite Dev",
    //   "onAutoForward": "notify"
    // }
    // "5432": {
    //   "label": "PostgreSQL",
    //   "onAutoForward": "silent"
    // },
    // "54321": {
    //   "label": "Supabase API",
    //   "onAutoForward": "notify"
    // },
    // "54323": {
    //   "label": "Supabase Studio",
    //   "onAutoForward": "notify"
    // }
  },
  "mounts": [
    "source=/mnt/c/git/agentic-central,target=/agentic-central,type=bind,consistency=cached"
  ],
  "postCreateCommand": "npm install --loglevel verbose",
  "postStartCommand": "sudo ln -sfn /agentic-central ${containerWorkspaceFolder}/.claude",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true
}