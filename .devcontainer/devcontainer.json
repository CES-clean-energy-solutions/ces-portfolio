{
  "name": "CES Portfolio Management System",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-pg",
        "ms-azuretools.vscode-docker",
        "anthropic.claude-code"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "workbench.colorCustomizations": {
          "titleBar.activeBackground": "#3178C6",
          "titleBar.activeForeground": "#ffffff",
          "activityBar.background": "#23587A",
          "statusBar.background": "#000000",
          "statusBar.foreground": "#3178C6",
          "tab.activeBackground": "#3178C6"
        }
      }
    }
  },
  "forwardPorts": [
    8080
  ],
  "portsAttributes": {
    "6000": {
      "label": "Next.js Dev",
      "onAutoForward": "notify"
    }
  },
  "runArgs": [
    "--env-file",
    "/mnt/c/git/agentic-central/.env"
  ],
  "mounts": [
    "source=/mnt/c/git/agentic-central,target=/agentic-central,type=bind,consistency=cached",
    "source=/mnt/c/Users/m.jones/Pictures/Screenshots,target=/screenshots,type=bind,consistency=cached"
  ],
  "postCreateCommand": "pnpm install",
  "postStartCommand": "bash .devcontainer/post-start.sh ${containerWorkspaceFolder}",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true
}